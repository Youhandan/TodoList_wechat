<!--index.wxml-->
<view>
  <view>
    <input
      class="todo-input"
      placeholder="What needs to be done?"
      placeholder-class="todo-input-placeholder"
      auto-focus
      value="{{inputValue}}"
      bindinput="bindKeyInput"
    />
    <button bindtap="addTodoItem" class="todo-add-button">Add</button>
  </view>
  <checkbox-group bindchange="completeTodoItem" class="todo-list">
    <view wx:for="{{todoList}}" wx:key="name" class="todo-item">
      <label class="{{item.checked ? 'todo-item-completed' : ''}}">
        <checkbox value="{{item.name}}" checked="{{item.checked}}"/>
        {{item.value}}
      </label>
      <icon type="cancel" size="25" bindtap="deleteTodoItem" id="{{item.name}}"/>
    </view>
  </checkbox-group>
</view>
